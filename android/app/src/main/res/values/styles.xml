<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
    </style>
      <!-- Transparent theme for the lock/setup Activity -->
    <!-- Update the transparent theme -->
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- Add these to make it truly transparent -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowFullscreen">false</item>
        <!-- Add to Theme.Transparent -->
        <!-- <item name="android:windowShowWhenLocked">true</item>
        <item name="android:windowTurnScreenOn">true</item> -->
    </style>
</resources>
